<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="6.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            </columnConstraints>
            <children>
                <VBox id="Task" alignment="CENTER_LEFT" minWidth="-Infinity" prefWidth="200.0" GridPane.columnIndex="0">
                    <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                    </stylesheets>

                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="5">
                            <children>
                                <HBox>
                                    <Label fx:id="id" styleClass="cell_id_label" text="index">
                              <HBox.margin>
                                 <Insets right="5.0" />
                              </HBox.margin></Label>
                                    <Label fx:id="taskName" styleClass="cell_name_label" text="task name" wrapText="true" />
                                </HBox>
                            </children>
                        </HBox>
                    </children>
               <padding>
                  <Insets left="10.0" />
               </padding>
                </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="115.0" prefWidth="100.0" GridPane.columnIndex="1">
               <children>
                        <Label fx:id="startDate" styleClass="cell_big_label" text="start day" textFill="#0316ee" wrapText="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                     </stylesheets>
                  </Label>
                        <Label fx:id="startTime" styleClass="cell_small_label" text="start time" textFill="#0316ee" wrapText="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                     </stylesheets>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER_RIGHT" prefHeight="115.0" prefWidth="100.0" GridPane.columnIndex="2">
               <children>
                        <Label fx:id="endDate" styleClass="cell_big_label" text="end day" textFill="#da2b2b" wrapText="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                     </stylesheets>
                     <VBox.margin>
                        <Insets right="7.0" />
                     </VBox.margin>
                  </Label>
                        <Label fx:id="endTime" styleClass="cell_small_label" text="end time" textFill="#da2b2b" wrapText="true">
                     <font>
                        <Font size="20.0" />
                     </font>
                     <stylesheets>
                        <URL value="@DarkTheme.css" />
                        <URL value="@Extensions.css" />
                     </stylesheets>
                     <opaqueInsets>
                        <Insets />
                     </opaqueInsets>
                     <VBox.margin>
                        <Insets right="7.0" />
                     </VBox.margin>
                  </Label>
               </children>
            </VBox>
            </children>
         <rowConstraints>
            <RowConstraints minHeight="-Infinity" prefHeight="60.0" />
         </rowConstraints>
        </GridPane>
    </children>
</HBox>
